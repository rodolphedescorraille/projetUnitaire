{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}


{% block body %}
    <h1>User index</h1>

    <table class="table">
        <thead>
        </thead>
        <tbody>
        {% for user in users %}
            <div >
                <div style="color:blue">{{ user.firstName }}  </div>
                <div style="color:red">{{ user.LastName }}  </div>
                <div style="color:green">{{ user.email }}  </div>
                <div style="color:green">{{ user.phone }}  </div>
            </div>
            <div>
                <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                <a href="{{ path('user_delete', {'id': user.id}) }}">delete</a>
            </div>
        </div>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">Create new</a>
{% endblock %}